<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PawsGo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_brown</item>
        <item name="colorPrimaryVariant">@color/brown_deep</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.PawsGo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.App.TimePicker</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/lighter_brown</item>
        <item name="colorOnPrimary">@color/brown_deep</item>
    </style>

    <style name="ThemeOverlay.App.TimePicker" parent="@style/ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/lighter_brown</item>
        <item name="colorOnPrimary">@color/brown_deep</item>
    </style>

    <style name="Theme.PawsGo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PawsGo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>